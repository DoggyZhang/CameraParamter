<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_recycler_record_item"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_record_normal" />

        <TextView
            android:id="@+id/tv_recycler_record_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_recycler_record_item"
            android:layout_alignRight="@id/iv_recycler_record_item"
            android:layout_margin="3dp"
            android:background="@drawable/bg_rect"
            android:padding="3dp"
            android:text="00:00"
            android:textColor="#fff" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_recycler_record_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:padding="5dp"
        android:text="Record Name"
        android:textColor="@color/text_color"
        android:textSize="18sp" />


</LinearLayout>